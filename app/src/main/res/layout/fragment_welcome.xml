<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/fragment_welcome">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_layout"
        >

    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color">

        <ImageView
            android:id="@+id/background_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:scaleType="fitCenter"
            android:src="@drawable/background_clouds"
            android:layout_marginBottom="60dp" />



        <ImageView
            android:id="@+id/Welcome_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:scaleType="fitCenter"
            android:src="@drawable/welcome"
            android:scaleX="1"
            android:scaleY="1"
            android:layout_marginBottom="550dp"/>

        <ImageView
            android:id="@+id/Eclipse_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:scaleX="3"
            android:scaleY="2.5"
            android:scaleType="fitCenter"
            android:src="@drawable/eclipse"
            android:layout_marginBottom="70dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/burger_sticker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-200dp"
                android:scaleType="fitCenter"
                android:scaleX="1.1"
                android:scaleY="1.1"
                android:src="@drawable/burgir_transparent_sticker" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-300dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="32dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Recently had a good burger?"
                android:textColor="@color/title1_color"
                android:textSize="34sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="74dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-30dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/roboto_medium"
                android:text="You can post a detailed review and grade the burger down below using the orange burger button!"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

        </LinearLayout>


    </RelativeLayout>








</androidx.coordinatorlayout.widget.CoordinatorLayout>
